# Syntax: editorconfig.org

root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
insert_final_newline = true
end_of_line = lf

[*.{yml, yaml, json, sublime-syntax, sublime-build, sublime-package, sublime-settings, sublime-menu, sublime-keymap, sublime-commands, tmPreferences}]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
